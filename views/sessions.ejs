<%- include ./layout/header.ejs %>
<%- include ./layout/menu.ejs %>

        <% if(role == 'teacher'){ %>
            <div class="container">
                <div class="row">
                        <div class="mx-auto">
                                <h4>Мои сессии</h4>
                        </div>
                </div>
            </div>
            
           
            <ul class="list-group list-group-flush">
                <% sessions.forEach(function(session){ %>
                    <a href="/session/view?session_id=<%=session.id%>">
                        <li class="list-group-item">
                            <%= session.name %>
                            <span style="display:inline-block; width: YOURWIDTH;"></span>
                            <%= session.author_name %>
                            <span style="display:inline-block; width: YOURWIDTH;"></span>
                            <%= new Date(session.date).getDate() +'.0'+ +(new Date(session.date).getMonth() + 1) +'.'+ new Date(session.date).getFullYear() %>
                        </li>
                    </a>
                    <% }); %>
            </ul>
            <% }else if(role == 'student'){ %>
                <div class="container">
                        <div class="row">
                                <div class="mx-auto">
                                        <h4>Мои задания</h4>
                                </div>
                        </div>
                    </div>
                    
                   
                    <ul class="list-group list-group-flush">
                        <% sessions.forEach(function(session){ %>
                            <a href="/session/view?session_id=<%=session.id%>">
                                <li class="list-group-item">
                                    <%= session.name %>
                                    <span style="display:inline-block; width: YOURWIDTH;"></span>
                                    <%= session.author_name %>
                                    <span style="display:inline-block; width: YOURWIDTH;"></span>
                                    <%= new Date(session.date).getDate() +'.0'+ +(new Date(session.date).getMonth() + 1) +'.'+ new Date(session.date).getFullYear() %>
                                </li>
                            </a>
                            <% }); %>
                    </ul>
            <% } %>

 <%- include ./layout/footer.ejs %>